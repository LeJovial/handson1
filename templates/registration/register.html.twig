<!DOCTYPE html>

<title>Register</title>
{{ block ("head", "/index.html.twig")}}

{{ block ("header", "/user/header.html.twig")}}
{% block body %}
    <main>
        <div class="d-flex justify-content-center flex-column align-items-center fs-4 text-center">
            <h1 class="my-3">Register</h1>
            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.username) }}
                <br>
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                {{ form_row(registrationForm.agreeTerms) }}

                <button type="submit" class="btn-green my-3">Register</button>
            {{ form_end(registrationForm) }}
        </div>
    </main>
{% endblock %}
